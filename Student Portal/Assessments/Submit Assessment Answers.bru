meta {
  name: Submit Assessment Answers
  type: http
  seq: 3
}

post {
  url: {{BASE_URL}}/student-portal/assessments/{{ASSESSMENT_ID}}/submit-answers
  body: json
  auth: inherit
}

headers {
  Content-Type: application/json
  user-id: {{USER_ID}}
}

body:json {
  {
    "answers": [
      {
        "questionId": "{{QUESTION_ID}}",
        "answer": {{ANSWER_VALUE}}
      }
    ]
  }
}

settings {
  encodeUrl: true
  timeout: 0
}